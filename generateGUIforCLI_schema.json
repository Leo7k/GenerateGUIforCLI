{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "description": {
      "type": "string"
    },
    "defaultArgumentNameValueSeparator": {
      "type": "string"
    },
    "defaultSelectMultipleValueSeparator": {
      "type": "string"
    },
    "defaultSelectMultipleQuotationSymbol": {
      "type": "string"
    },
    "defaultQuotationSymbol": {
      "type": "string"
    },
    "defaultBooleanTrue": {
      "type": "string"
    },
    "defaultBooleanFalse": {
      "type": "string"
    },
    "sections": {
      "type": "object",
      "additionalProperties": {
          "type": "object",
          "properties": {
            "displayName": {
              "type": "string"
            },
            "args": {
              "type": "array",
              "prefixItems": [
                {
                  "type": "object",
                  "properties": {
                    "booleanTrue": {
                      "type": "string"
                    },
                    "booleanFalse": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "type": {
                      "type": "string",
                      "enum": ["boolean", "input-file", "input-file-multiple", "number", "output-file", "string", "select-one", "select-multiple"]
                    },
                    "required": {
                      "type": "boolean"
                    },
                    "displayName": {
                      "type": "string"
                    },
                    "quotationSymbol": {
                      "type": "string"
                    },
                    "defaultValue": {
                      "type": "string"
                    },
                    "nameValueSeparator": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "name",
                    "type",
                    "displayName"
                  ]
                }
              ]
            }
          },
          "required": [
            "displayName",
            "args"
          ]
        }
    }
  },
  "required": [
    "defaultArgumentNameValueSeparator",
    "defaultSelectMultipleValueSeparator",
    "defaultSelectMultipleQuotationSymbol",
    "defaultQuotationSymbol",
    "defaultBooleanTrue",
    "defaultBooleanFalse",
    "sections"
  ]
}